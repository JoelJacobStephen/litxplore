      "DocumentGenerateRequest": {
        "properties": {
          "content": {
            "type": "string",
            "minLength": 1,
            "title": "Content",
            "description": "The content of the review"
          },
          "citations": {
            "items": {
              "$ref": "#/components/schemas/Paper"
            },
            "type": "array",
            "minItems": 1,
            "title": "Citations",
            "description": "List of cited papers"
          },
          "topic": {
            "type": "string",
            "minLength": 1,
            "title": "Topic",
            "description": "The review topic"
          },
          "format": {
            "type": "string",
            "pattern": "^(pdf|latex)$",
            "title": "Format",
            "description": "Output format (pdf or latex)"
          }
        },
        "type": "object",
        "required": [
          "content",
          "citations",
          "topic",
          "format"
        ],
        "title": "DocumentGenerateRequest",
        "example": {
          "citations": [
            {
              "authors": [
                "Author 1",
                "Author 2"
              ],
              "id": "paper_id",
              "published": "2025-10-18T15:16:35.099620",
              "summary": "Paper summary",
              "title": "Paper Title",
              "url": "http://example.com/paper.pdf"
            }
          ],
          "content": "Literature review content...",
          "format": "pdf",
          "topic": "Research Topic"
        }
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "Paper": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "title": {
            "type": "string",
            "title": "Title"
          },
          "authors": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Authors"
          },
          "summary": {
            "type": "string",
            "title": "Summary"
          },
          "published": {
            "type": "string",
            "format": "date-time",
            "title": "Published"
          },
          "url": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Url"
          }
        },
        "type": "object",
        "required": [
          "id",
          "title",
          "authors",
          "summary",
          "published"
        ],
        "title": "Paper"
      },
      "ReviewRequest": {
        "properties": {
          "paper_ids": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Paper Ids"
          },
          "topic": {
            "type": "string",
            "maxLength": 500,
            "minLength": 3,
            "title": "Topic",
            "description": "Research topic for literature review"
          },
          "max_papers": {
            "type": "integer",
            "maximum": 20,
            "minimum": 1,
            "title": "Max Papers",
            "description": "Maximum number of papers to analyze",
            "default": 10
          }
        },
        "type": "object",
        "required": [
          "paper_ids",
          "topic"
        ],
        "title": "ReviewRequest",
        "example": {
          "max_papers": 10,
          "topic": "Recent advances in transformer architectures for natural language processing"
        }
      },
      "TaskResponse": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "status": {
            "$ref": "#/components/schemas/TaskStatus"
          },
          "error_message": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error Message"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At"
          },
          "result_data": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Result Data"
          }
        },
        "type": "object",
        "required": [
          "id",
          "status",
          "created_at"
        ],
        "title": "TaskResponse"
      },
      "TaskStatus": {
        "type": "string",
        "enum": [
          "pending",
          "running",
          "completed",
          "failed"
        ],
        "title": "TaskStatus"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
